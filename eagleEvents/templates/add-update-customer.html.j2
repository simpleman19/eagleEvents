{% extends "layout.html.j2" %}
{% block head_content %}
      <title>Eagle Events Customer</title>
{% endblock %}  
{% block body_content %}
    <div class="container">
        <div class="card card-container">
            <h2>Customer</h2>
            <form method="post" class="form-customer-2">
                   <div class="form-group row">
                        <label for="customer-name" class="col-2 col-form-label">Name</label>
                            <div class="col-10">
                                <input class="form-control" type="text" value="{{customer.name}}" name="name">
                            </div>
                    </div>
                <div class="form-group row">
                    <label for="phone" class="col-2 col-form-label">Telephone</label>
                        <div class="col-10">
                            <input class="form-control" type="tel" value="{{customer.phone_number}}" name="phone">
                        </div>
                </div>
                <div class="form-group row">
                    <label for="email" class="col-2 col-form-label">Email</label>
                        <div class="col-10">
                            <input class="form-control" type="email" value="{{customer.email}}" name="email">
                        </div>
                </div>  
                <div class="buttons">
                    <button class="btn btn-lg btn-primary btn-save" type="submit">Save</button>
                    <a class="btn btn-lg btn-danger btn-cancel" href="{{cancel_redirect}}">Cancel</a>
                </div>
            </form><!-- /form -->
        </div><!-- /card-container -->
    </div><!-- /container -->  
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
{% endblock %}
