{% extends "layout.html.j2" %}
{% block head_content %}
      <title>Eagle Events -Add Event</title>
{% endblock %}  
{% block body_content %}
    <div class="container">
        <div class="card card-container-2">
            <h2>Event</h2>
            <div class="row-1">
            <form class="form-customer">
                        <div class="form-group row">
                        <label for="exampleSelect1">Customer</label>
                            <select class="form-control form-control-event" id="eventPlanner">
                              <option>Name 1</option>
                              <option>Name 2</option>
                              <option>Name 3</option>
                              <option>Name 4</option>
                              <option>Name 5</option>
                            </select>
                    </div>
                    <div class="form-group row">
                        <label for="exampleSelect1">Event Planner</label>
                            <select class="form-control form-control-event" id="eventPlanner">
                              <option>Event Planner 1</option>
                              <option>Event Planner 2</option>
                              <option>Event Planner 3</option>
                              <option>Event Planner 4</option>
                              <option>Event Planner 5</option>
                            </select>
                    </div>
                </form>
                       <div class="buttons-event">
                           <button method=post enctype=multipart/form-data class="btn btn-lg btn-success btn-block btn-event-function"
                                       onclick="document.getElementById('file').click();" type="submit">Import Guests</button>
                           <button class="btn btn-lg btn-success btn-block btn-event-function" type="submit">Seating Chart</button>
                           <button class="btn btn-lg btn-success btn-block btn-event-function" type="submit">Print Attendance List</button>
                           <button class="btn btn-lg btn-success btn-block btn-event-function" type="submit">Print Table Cart</button>
                           <form method="post" enctype="multipart/form-data">
                               <input type=file id="file" name="file" onchange="this.form.submit()" style="display:none;"/>
                           </form>
                    </div>
            </div>
        </div>
                </div>
                <div class="container">
                    <div class="card card-container-2">
                        <h3>Event Information</h3>
                        <div class="row-2">
                            <form class="event-info">
                                <div class="form-group row">
                                <label for="example-text-input" class="col-2 col-form-label">First Name</label>
                                    <div class="col-10">
                                        <input class="form-control form-control-event" type="text" value="" id="example-text-input">
                                    </div>
                                </div>
                                <div class="form-group row">
                                <label for="example-text-input" class="col-2 col-form-label">Last Name</label>
                                    <div class="col-10">
                                        <input class="form-control form-control-event" type="text" value="" id="example-text-input">
                                    </div>
                                </div>
                                <div class="form-group row">
                                <label for="example-text-input" class="col-2 col-form-label">Venue</label>
                                    <div class="col-10">
                                        <input class="form-control form-control-event" type="text" value="" id="example-text-input">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="example-datetime-local-input" class="col-2 col-form-label">Date and time</label>
                                <div class="col-10">
                                    <input class="form-control form-control-event" type="datetime-local" value="2011-08-19T13:45:00" id="example-datetime-local-input">
                                </div>
                                </div>
                                 <div class="form-group row">
                                    <label for="exampleSelect1">Status</label>
                                        <select class="form-control form-control-event" id="status">
                                          <option>In Progress</option>
                                          <option>On Hold</option>
                                          <option>Done</option>
                                        </select>
                                </div>
                                <div class="form-group row">
                                    <label for="exampleSelect1">Table Size</label>
                                        <select class="form-control form-control-event" id="status">
                                          <option>4</option>
                                          <option>6</option>
                                          <option>8</option>
                                          <option>10</option>
                                          <option>12</option>
                                        </select>
                                </div>
                                <div class="form-group row">
                                    <label for="example-number-input" class="col-2 col-form-label">Precent Extra Seat</label>
                                        <div class="col-10">
                                            <input class="form-control form-control-event" type="number" value="50" id="example-number-input">
                                        </div>
                                </div>
                            </form>
                    </div>
                    <div class="buttons">
                        <button class="btn btn-lg btn-primary btn-save" type="submit">Save</button>
                        <button class="btn btn-lg btn-danger btn-cancel" type="cancel">Cancel</button>
                    </div>
        </div>
    </div>
    </div>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
{% endblock %}