{% extends "layout.html.j2" %}
{% block head_content %}
    <title>Eagle Events Users</title>
{% endblock %}   
{% block body_content %}
    <h1>Users</h1>
        <div class="container">
            <button class="btn btn-primary active" id="refreshButton" onclick="refreshTable()">Refresh Table</button>
        </div>
            <div class="card card-container-2">
                <div class="dynamic-wrapper-list">
                    <table id="listTable" class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Username</th>
                                <th>Active</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                            <tr class = "click-row" data-href="modifyEventPlanner/ + {{ user.id }}">
                                <td>{{user.name}}</td>
                                <td>{{user.username}}</td>
                                <td><input type="checkbox" value="" {{'checked="checked"' if user.is_active}} disabled></td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <input type="button" class="btn btn-primary active btn-add" onclick="window.location.href='/modifyEventPlanner'" value="Add"/>
            </div>
        </div>
<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script>

    function refreshTable() {
        url = window.location.href;
        window.location = url;
    }

    $(".click-row").click(function() {
        window.location = $(this).data("href");
    });

</script>
{% endblock %}

